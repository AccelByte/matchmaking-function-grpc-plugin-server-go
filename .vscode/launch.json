{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go: Debug Server",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "info",
        "OTEL_SERVICE_NAME": "MatchmakingFunctionGrpcPluginServerGo",
        "PLUGIN_GRPC_SERVER_AUTH_ENABLED": "false"
      },
      "args": []
    },
    {
      "name": "Go: Run Server (no debug)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "cwd": "${workspaceFolder}",
      "env": {
        "LOG_LEVEL": "info",
        "OTEL_SERVICE_NAME": "MatchmakingFunctionGrpcPluginServerGo",
        "PLUGIN_GRPC_SERVER_AUTH_ENABLED": "false"
      },
      "args": []
    },
    {
      "name": "Go: Attach to Process",
      "type": "go",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
